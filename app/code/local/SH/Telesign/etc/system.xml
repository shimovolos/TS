<?xml version="1.0"?>
<config>
    <tabs>
        <sh_telesign translate="label" module="sh_telesign">
            <label>SH Telesign</label>
            <sort_order>0</sort_order>
        </sh_telesign>
    </tabs>
    <sections>
        <sh_telesign_settings translate="label" module="sh_telesign">
            <label>Settings</label>
            <tab>sh_telesign</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>0</sort_order>
            <groups>
                <general translate="label" module="sh_telesign">
                    <label>General</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>0</sort_order>
                    <expanded>1</expanded>
                    <fields>
                        <notification_type translate="label" module="sh_telesign">
                            <label>Telesign notification type</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>sh_telesign/system_config_source_type_notification</source_model>
                        </notification_type>
                        <telephone_from_address translate="label" module="sh_telesign">
                            <label>Get default Telephone from address</label>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>sh_telesign/system_config_source_type_address</source_model>
                        </telephone_from_address>
                    </fields>
                </general>
                <enablings translate="label" module="sh_telesign">
                    <label>Enable Telesign Module</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1</sort_order>
                    <expanded>1</expanded>
                    <fields>
                        <customer_register translate="label" module="sh_telesign">
                            <label>Enable on Customer Registration</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </customer_register>
                        <checkout translate="label" module="sh_telesign">
                            <label>Enable on Checkout</label>
                            <validate>required-entry</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </checkout>
                        <guest_checkout translate="label" module="sh_telesign">
                            <label>Enable on Guest Checkout</label>
                            <validate>required-entry</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </guest_checkout>
                    </fields>
                </enablings>
                <register_page_settings translate="label" module="sh_telesign">
                    <label>Register Page Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>3</sort_order>
                    <expanded>1</expanded>
                    <fields>
                        <enable_address_on_register translate="label" module="sh_telesign">
                            <label>Enable Address on Register Page</label>
                            <validate>required-entry</validate>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable_address_on_register>
                        <customer_register_address_type translate="label" module="sh_telesign">
                            <label>Telesign Address Type During Registration</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>sh_telesign/system_config_source_type_register</source_model>
                        </customer_register_address_type>
                        <front_telephone_parsing translate="label" module="sh_telesign">
                            <label>Telephone validation</label>
                            <validate>required-entry</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Enable telephone validation based on selected country (Only if Address Type equals Full Address)</comment>
                        </front_telephone_parsing>
                    </fields>
                </register_page_settings>
            </groups>
        </sh_telesign_settings>
        <sh_telesign_api translate="label" module="sh_telesign">
            <label>Telesign API</label>
            <tab>sh_telesign</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>1</sort_order>
            <groups>
                <settings translate="label">
                    <label>API Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <customer_id translate="label">
                            <label>Customer ID</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                        </customer_id>
                        <key translate="label">
                            <label>REST API Key</label>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                        </key>
                    </fields>
                </settings>
                <sms_settings translate="label">
                    <label>SMS Settings</label>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <use_default_message translate="label">
                            <label>Use Default Message</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </use_default_message>
                        <message_template translate="label">
                            <label>Message Template</label>
                            <validate>required-entry validate-length maximum-length-160</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                            <comment>Message length - 160 characters. Your text message must incorporate a $$CODE$$ placeholder to integrate the verify_code field. Example: Your code is $$CODE$$</comment>
                            <depends><use_default_message>0</use_default_message></depends>
                        </message_template>
                    </fields>
                </sms_settings>
                <call_settings translate="label">
                    <label>Call Settings</label>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <use_default_tts_message translate="label">
                            <label>Use Default Text-to-Speech Message</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </use_default_tts_message>
                        <message_template translate="label">
                            <label>Text-to-Speech Message Template</label>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                            <comment>
                                Your text-to-speech message must incorporate a $$CODE$$ placeholder to integrate the verify_code field. Example: Your code is $$CODE$$.
                                https://developer.telesign.com/v2.0/docs/rest_api-verify-call#text-to-speech-tts-hints
                            </comment>
                            <depends><use_default_tts_message>0</use_default_tts_message></depends>
                        </message_template>
                    </fields>
                </call_settings>
            </groups>
        </sh_telesign_api>
        <sh_telesign_admin_settgins translate="label" module="sh_telesign">
                <label>Admin Settings</label>
                <tab>sh_telesign</tab>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <sort_order>2</sort_order>
                <groups>
                    <general translate="label" module="sh_telesign">
                        <label>General</label>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <sort_order>0</sort_order>
                        <expanded>1</expanded>
                        <fields>
                            <enable_data_grids translate="label" module="sh_telesign">
                                <label>Enable Data Grids on Admin Panel</label>
                                <validate>required-entry</validate>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                            </enable_data_grids>
                            <enable_telephone_base_data_grid translate="label" module="sh_telesign">
                                <label>Enable Telephone Base Data Grid</label>
                                <validate>required-entry</validate>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <depends><enable_data_grids>1</enable_data_grids></depends>
                            </enable_telephone_base_data_grid>
                            <enable_telesign_transactions_data_grid translate="label" module="sh_telesign">
                                <label>Enable Telesign Transactions Data Grid</label>
                                <validate>required-entry</validate>
                                <sort_order>3</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <depends><enable_data_grids>1</enable_data_grids></depends>
                            </enable_telesign_transactions_data_grid>
                        </fields>
                    </general>
                </groups>
        </sh_telesign_admin_settgins>
    </sections>
</config>