<?xml version="1.0"?>
<config>
    <tabs>
        <sh_telesign translate="label" module="sh_telesign">
            <label>SH Telesign</label>
            <sort_order>0</sort_order>
        </sh_telesign>
    </tabs>
    <sections>
        <sh_telesign_settings translate="label" module="sh_telesign">
            <label>Settings</label>
            <tab>sh_telesign</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>0</sort_order>
            <groups>
                <enablings translate="label" module="sh_telesign">
                    <label>Enable Telesign Module</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>0</sort_order>
                    <expanded>1</expanded>
                    <fields>
                        <customer_register translate="label" module="sh_telesign">
                            <label>Enable on Customer Registration</label>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </customer_register>
                        <customer_edit_address translate="label" module="sh_telesign">
                            <label>Enable on Customer Edit Address</label>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </customer_edit_address>
                        <checkout translate="label" module="sh_telesign">
                            <label>Enable on Checkout</label>
                            <validate>required-entry</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </checkout>
                        <guest_checkout translate="label" module="sh_telesign">
                            <label>Enable on Guest Checkout</label>
                            <validate>required-entry</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </guest_checkout>
                    </fields>
                </enablings>
            </groups>
        </sh_telesign_settings>
    </sections>
</config>