<?xml version="1.0"?>
<config>
    <modules>
        <SH_Telesign>
            <version>0.1.1</version>
        </SH_Telesign>
    </modules>
    <global>
        <models>
            <sh_telesign>
                <class>SH_Telesign_Model</class>
                <resourceModel>sh_telesign_resource</resourceModel>
            </sh_telesign>
            <sh_telesign_resource>
                <class>SH_Telesign_Model_Resource</class>
            </sh_telesign_resource>
        </models>
        <blocks>
            <sh_telesign>
                <class>SH_Telesign_Block</class>
            </sh_telesign>
        </blocks>
        <helpers>
            <sh_telesign>
                <class>SH_Telesign_Helper</class>
            </sh_telesign>
            <sh_customer>
                <class>SH_Telesign_Helper_Customer</class>
            </sh_customer>
        </helpers>
        <resources>
            <sh_telesign_setup>
                <setup>
                    <module>SH_Telesign</module>
                </setup>
            </sh_telesign_setup>
        </resources>
        <events>
            <customer_register_success>
                <observers>
                    <sh_telesign>
                        <type>singleton</type>
                        <class>SH_Telesign_Model_Customer_Observer</class>
                        <method>sendCustomerNotificationViaTelesignAfterRegister</method>
                    </sh_telesign>
                </observers>
            </customer_register_success>
            <controller_action_predispatch>
                <observers>
                    <sh_telesign>
                        <type>singleton</type>
                        <class>SH_Telesign_Model_Customer_Observer</class>
                        <method>hookToControllerActionPreDispatch</method>
                    </sh_telesign>
                </observers>
            </controller_action_predispatch>
            <check_telesign_confirmation_before_login>
                <observers>
                    <itransition_escrow>
                        <class>SH_Telesign_Model_Customer_Observer</class>
                        <method>checkTelesignConfirmationBeforeLogin</method>
                    </itransition_escrow>
                </observers>
            </check_telesign_confirmation_before_login>
            <customer_login>
                <observers>
                    <itransition_escrow>
                        <class>SH_Telesign_Model_Customer_Observer</class>
                        <method>checkTelesignConfirmationBeforeLogin</method>
                    </itransition_escrow>
                </observers>
            </customer_login>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <SH_Tireon>
                    <files>
                        <default>SH_Telesign.csv</default>
                    </files>
                </SH_Tireon>
            </modules>
        </translate>
    </adminhtml>
</config>